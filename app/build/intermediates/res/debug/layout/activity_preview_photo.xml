<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".PreviewPhotoActivity" >

    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="300dp"
        android:contentDescription="Image Preview"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:id="@+id/tvComment"
        android:layout_below="@+id/ivPreview"
        android:layout_alignLeft="@+id/ivPreview"
        android:layout_alignStart="@+id/ivPreview"
        android:layout_marginTop="20dp"
        android:textColor="#f2f2f2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etComment"
        android:layout_below="@+id/tvComment"
        android:layout_alignLeft="@+id/tvComment"
        android:layout_alignStart="@+id/tvComment"
        android:text="Comment"
        android:layout_alignRight="@+id/ivPreview"
        android:lines="3"
        android:textColor="#2f2f2f"
        android:visibility="visible"
        android:background="#f2f2f2" />

</RelativeLayout><!-- From: file:/Users/g7190305/AndroidBootCamp/Project_5/app/src/main/res/layout/activity_preview_photo.xml -->